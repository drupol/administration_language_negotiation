/**
 * Implements hook_form_alter().
 */
function administration_language_negotiation_form_user_form_alter(&$form, FormStateInterface $form_state) {
  /** @var $user \Drupal\user\Entity\User */
  $user = $form_state->getFormObject()->getEntity();
  if ($user->hasPermission('use_administration_language_negotiation')) {
    $form['language']['preferred_admin_langcode']['#access'] = TRUE;
  }
}
